{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "orleans-redis": {
      "type": "container.v0",
      "connectionString": "{orleans-redis.bindings.tcp.host}:{orleans-redis.bindings.tcp.port},password={orleans-redis-password.value}",
      "image": "docker.io/library/redis:7.4",
      "entrypoint": "/bin/sh",
      "args": [
        "-c",
        "redis-server --requirepass $REDIS_PASSWORD"
      ],
      "env": {
        "REDIS_PASSWORD": "{orleans-redis-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 6379
        }
      }
    },
    "health-monitor-cluster": {
      "type": "project.v0",
      "path": "../HealthMonitor.Cluster/HealthMonitor.Cluster.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "Orleans__Clustering__ProviderType": "Redis",
        "Orleans__Clustering__ServiceKey": "orleans-redis",
        "ConnectionStrings__orleans-redis": "{orleans-redis.connectionString}",
        "Orleans__ClusterId": "{cluster-cluster-id.value}",
        "Orleans__ServiceId": "{cluster-service-id.value}",
        "Orleans__EnableDistributedTracing": "true",
        "Orleans__Reminders__ProviderType": "Redis",
        "Orleans__Reminders__ServiceKey": "orleans-redis",
        "Orleans__GrainStorage__Default__ProviderType": "Redis",
        "Orleans__GrainStorage__Default__ServiceKey": "orleans-redis",
        "Orleans__Endpoints__SiloPort": "{health-monitor-cluster.bindings.orleans-silo.targetPort}",
        "Orleans__Endpoints__GatewayPort": "{health-monitor-cluster.bindings.orleans-gateway.targetPort}"
      },
      "bindings": {
        "orleans-silo": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 8000
        },
        "orleans-gateway": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 8001
        }
      }
    },
    "health-monitor-cluster-dashboard": {
      "type": "project.v0",
      "path": "../HealthMonitor.Cluster.Dashboard/HealthMonitor.Cluster.Dashboard.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{health-monitor-cluster-dashboard.bindings.http.targetPort}",
        "Orleans__Clustering__ProviderType": "Redis",
        "Orleans__Clustering__ServiceKey": "orleans-redis",
        "ConnectionStrings__orleans-redis": "{orleans-redis.connectionString}",
        "Orleans__ClusterId": "{cluster-cluster-id.value}",
        "Orleans__ServiceId": "{cluster-service-id.value}",
        "Orleans__EnableDistributedTracing": "true",
        "Orleans__Reminders__ProviderType": "Redis",
        "Orleans__Reminders__ServiceKey": "orleans-redis",
        "Orleans__GrainStorage__Default__ProviderType": "Redis",
        "Orleans__GrainStorage__Default__ServiceKey": "orleans-redis",
        "Orleans__Endpoints__SiloPort": "{health-monitor-cluster-dashboard.bindings.orleans-silo.targetPort}",
        "Orleans__Endpoints__GatewayPort": "{health-monitor-cluster-dashboard.bindings.orleans-gateway.targetPort}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        },
        "orleans-silo": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 8002
        },
        "orleans-gateway": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 8003
        }
      }
    },
    "health-monitor": {
      "type": "project.v0",
      "path": "../HealthMonitor/HealthMonitor.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{health-monitor.bindings.http.targetPort}",
        "Orleans__Clustering__ProviderType": "Redis",
        "Orleans__Clustering__ServiceKey": "orleans-redis",
        "ConnectionStrings__orleans-redis": "{orleans-redis.connectionString}",
        "Orleans__ClusterId": "{cluster-cluster-id.value}",
        "Orleans__ServiceId": "{cluster-service-id.value}",
        "Orleans__EnableDistributedTracing": "true"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "orleans-redis-password": {
      "type": "parameter.v0",
      "value": "{orleans-redis-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22,
              "special": false
            }
          }
        }
      }
    },
    "cluster-cluster-id": {
      "type": "parameter.v0",
      "value": "{cluster-cluster-id.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "default": {
            "generate": {
              "minLength": 25,
              "upper": false,
              "special": false
            }
          }
        }
      }
    },
    "cluster-service-id": {
      "type": "parameter.v0",
      "value": "{cluster-service-id.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "default": {
            "generate": {
              "minLength": 25,
              "upper": false,
              "special": false
            }
          }
        }
      }
    }
  }
}